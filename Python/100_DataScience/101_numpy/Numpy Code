x = int(input("Enter a size:  "))
y = int(input("Enter a minimum value:  "))
z = int(input("Enter a maximum value:  "))
a = random.randint(y,z,x)
b = a.max()
b = str(b)
c = a.min()
c = str(c)
d = a.sum()
e = d/x
e = str(e)
print(a)
print("Maximum: " + b)
print("Minimum: " + c)
print("Average: " + e)